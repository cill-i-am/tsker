# HTTP server port for the API process.
PORT=3002

# local | staging | production
APP_ENV=local

# trace | debug | info | warn | error | fatal
LOG_LEVEL=info

# PostgreSQL connection string.
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tsker

# Better Auth signing secret (>=32 chars in production).
BETTER_AUTH_SECRET=replace-with-long-random-secret

# Public auth base URL, usually your API origin.
BETTER_AUTH_URL=http://api.localtest.me:3002

# Comma-separated list of trusted web origins.
AUTH_TRUSTED_ORIGINS=http://app.localtest.me:3000

# Cookie domain shared across sibling subdomains.
AUTH_COOKIE_DOMAIN=.localtest.me
