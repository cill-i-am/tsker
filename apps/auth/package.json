{
  "name": "auth",
  "version": "0.1.0",
  "private": true,
  "description": "Dedicated Better Auth service built with Hono on Node.js",
  "type": "module",
  "scripts": {
    "dev": "portless auth.tsker tsx --conditions=development watch ./bin/dev.ts",
    "dev:e2e": "tsx --conditions=development ./bin/dev.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node ./bin/start.mjs",
    "test": "vitest run",
    "lint": "ultracite check src",
    "type-check": "tsc --noEmit",
    "check-types": "pnpm run type-check"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@repo/db": "workspace:^",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "effect": "3.19.18",
    "hono": "^4.10.5",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@effect/language-service": "^0.73.1",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.15.6",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
