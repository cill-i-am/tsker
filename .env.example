# local | staging | production
APP_ENV=local

# trace | debug | info | warn | error | fatal
LOG_LEVEL=info

# PostgreSQL connection string for local Docker Postgres.
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tsker

# Better Auth signing secret (>=32 chars in production).
BETTER_AUTH_SECRET=local-dev-secret-local-dev-secret-12345

# Default local dev URLs (Portless + .localhost hostnames).
BETTER_AUTH_URL=http://auth.tsker.localhost:1355
AUTH_TRUSTED_ORIGINS=http://app.tsker.localhost:1355
AUTH_COOKIE_DOMAIN=.tsker.localhost
AUTH_URL=http://auth.tsker.localhost:1355
VITE_API_URL=http://api.tsker.localhost:1355
VITE_AUTH_URL=http://auth.tsker.localhost:1355
